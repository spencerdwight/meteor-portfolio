---
import { ArrowLeft } from 'lucide-astro';

import Head from '~/components/Head.astro';
import { SITE_TITLE } from '~/constants';
import Document from '~/layouts/Document.astro';
---

<Head title=`Not found â”€ ${SITE_TITLE}` description='Whoops, it looks like the page you requested cannot be found' />

<Document>
	<main class='grid min-h-screen place-items-center px-6 py-24 sm:py-32 lg:px-8'>
		<div class='space-y-8 text-left'>
			<div
				class='max-w-xl space-y-4 text-4xl font-semibold not-italic leading-9 tracking-tighter selection:bg-primary-500 selection:text-white'
			>
				<h1 class='text-black dark:text-white' transition:name='title'>Page not found</h1>

				<h1 class='text-gray-300 dark:text-gray-500' transition:name='sub-title'>
					Sorry, we couldn't find the page you're looking for.
				</h1>
			</div>

			<div class='flex items-center justify-start gap-x-6'>
				<a
					class='default-focus default-transition group inline-flex items-center justify-center space-x-2 rounded-md px-4 py-2 text-sm font-semibold text-gray-400 bg-white hover:bg-gray-50 dark:bg-gray-950 dark:hover:bg-gray-900 border border-white hover:border-gray-100 dark:border-gray-900 dark:hover:border-gray-800 hover:text-gray-500 dark:hover:text-gray-400'
					href='/'
				>
					<ArrowLeft
						class='default-transition transform group-hover:-translate-x-1 group-hover:text-gray-500 dark:group-hover:text-gray-400'
					/>
					<span>Go back home</span>
				</a>
			</div>
		</div>
	</main>
</Document>
